{% extends admin.getTemplate('base_list_field') %}

{% trans_default_domain 'Synchronization' %}
{% import 'ExternalBundle::macros.html.twig' as macros %}

{% block field %}
    {% set total = object.total %}
    {% if value is not null and total > 0 %}

        {% set progressing = object.progressingImportation %}

        {{ macros.progressGroup(
            '',
            (progressing ? ('options.class.'~progressing.name)|trans : '&nbsp;'),
            value,
            total,
            progressing
        )}}
    {% endif %}
{% endblock %}
