data:
    image: busybox
    container_name: prisme_data
    volumes:
        - .:/srv
        - ./docker/conf/nginx_vhost.conf:/etc/nginx/sites-enabled/my_app.conf
        - ./docker/.home-developer:/home/developer
        - /var/lib/postgresql/data

webserver:
    image: greg0ire/nginx
    container_name: prisme_webserver
    volumes_from:
        - data
    links:
        - appserver
    env_file:
        - ./docker/docker-compose.env
    environment:
        - DNSDOCK_IMAGE=web
    restart: always

appserver:
    image: meuhmeuhconcept/php-fpm
    container_name: prisme_appserver
    volumes_from:
        - data
    links:
        - database
        - mailer
    env_file:
        - ./docker/docker-compose.env
    environment:
        - DNSDOCK_IMAGE=app
    restart: always

console:
    image: meuhmeuhconcept/php-console
    container_name: prisme_console
    volumes_from:
        - data
    links:
        - database
        - mailer
    env_file:
        - ./docker/docker-compose.env
    environment:
        - DNSDOCK_IMAGE=console
    working_dir: /srv
    restart: always

database:
    image: postgres:9.6
    container_name: prisme_database
    volumes_from:
        - data
    env_file:
        - ./docker/docker-compose.env
    environment:
        - DNSDOCK_IMAGE=db
    restart: always

mailer:
    image: greg0ire/mailcatcher
    container_name: prisme_mailer
    env_file:
        - ./docker/docker-compose.env
    environment:
        - DNSDOCK_IMAGE=mailer
